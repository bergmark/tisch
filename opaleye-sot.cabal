name:                opaleye-sot
version:             0.1
author:              Renzo Carbonara
maintainer:          renzoÎ»carbonara.com.ar
copyright:           Renzo Carbonara 2015
license:             BSD3
license-file:        LICENSE.txt
extra-source-files:  README.md CHANGELOG.md
category:            Data
build-type:          Simple
cabal-version:       >=1.18
synopsis:            Opaleye's sugar on top.
description:         Opaleye's sugar on top.
homepage:            https://github.com/k0001/opaleye-sot
bug-reports:         https://github.com/k0001/opaleye-sot/issues


library
  hs-source-dirs: src/lib
  default-language: Haskell2010
  exposed-modules:
      Opaleye.SOT
      Opaleye.SOT.Run
      Opaleye.SOT.Extra
      Opaleye.SOT.Internal
      Opaleye.SOT.Internal.Profunctors
      Opaleye.SOT.Internal.Record
      Opaleye.SOT.Internal.Singletons
  build-depends:
      -- NOTE: The dependencies without specific version ranges are transitional
      aeson
    , base >=4.7 && <5.0
    , bytestring
    , case-insensitive
    , exceptions >=0.8 && <0.9
    , lens >=4.14 && <4.15
    , mtl >=2.2 && <2.3
    , opaleye >=0.5 && <0.6
    , postgresql-simple
    , product-profunctors
    , profunctors
    , semigroups
    , singletons >=2.1 && <2.2
    , tagged
    , text
    , transformers >=0.5 && <0.6
    , time
    , uuid
  ghc-options: -Wall -O

test-suite tests
  hs-source-dirs: tests
  default-language: Haskell2010
  type: exitcode-stdio-1.0
  main-is: Main.hs
  other-modules: Tutorial
  ghc-options: -Wall -rtsopts -O0
  build-depends:
      base
    , lens
    , mtl
    , opaleye
    , opaleye-sot
    , postgresql-simple
    , time
